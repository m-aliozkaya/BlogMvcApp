@model  IEnumerable<BlogMvcApp.Models.BlogModel>

@{
    ViewBag.Title = "Index";
}

<h1>Blog Listesi</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        @foreach (var blog in Model)
        {
            <div class="card mb-4">
                <img class="card-img-top" src="https://via.placeholder.com/900x300" alt="Card image cap">
                <div class="card-body">
                    <div class="card-title">
                        <h3>@blog.Title</h3>
                        <p>
                            <i class="fas fa-calendar-week"></i>
                            @blog.CreatedDate
                        </p>
                    </div>
                    <p class="card-text">@blog.Description</p>
                    <a href="#" class="btn btn-primary">Read More...</a>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div class="card p-2 mb-5">
            <h4 class="card-title pl-3">Blog Search</h4>
            <div class="input-group col-md-12">
                <input class="form-control py-2" type="search" value="search" id="example-search-input">
                <span class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </div>
        <div class="card p-2">
            <h4 class="card-title pl-3">Blog Categories</h4>
            <div class="col-md-12">
                <ul class="list-unstyled" style="column-count:2">
                    <li><a href="#">Category Name</a></li>
                    <li><a href="#">Category Name</a></li>
                    <li><a href="#">Category Name</a></li>
                    <li><a href="#">Category Name</a></li>
                    <li><a href="#">Category Name</a></li>
                    <li><a href="#">Category Name</a></li>
                    <li><a href="#">Category Name</a></li>
                    <li><a href="#">Category Name</a></li>
                </ul>
            </div>
        </div>

    </div>
</div>

